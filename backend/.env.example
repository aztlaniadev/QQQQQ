# Acode Lab Backend Environment Configuration

# Application Settings
APP_NAME="Acode Lab API"
APP_VERSION="1.0.0"
DEBUG=true

# Database Configuration
MONGO_URL="mongodb://localhost:27017"
DB_NAME="acode_lab"

# Security Configuration
SECRET_KEY="your-super-secret-key-change-in-production-minimum-32-characters"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"

# API Configuration
API_PREFIX="/api"
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration (Optional)
SMTP_SERVER=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""

# Redis Configuration (Optional - for caching)
REDIS_URL=""

# Logging
LOG_LEVEL="INFO"

# Production Settings (for production deployment)
# DEBUG=false
# SECRET_KEY="generate-a-secure-secret-key-for-production"
# MONGO_URL="mongodb://your-production-mongodb-url"
# CORS_ORIGINS="https://your-production-domain.com"